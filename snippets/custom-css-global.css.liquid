  {% assign color_codes = "bronze:#CD7F32,purple:#BA55D3,blue:#4169E1,black:#000000,burgundy:#800020" %}
  {% assign color_array = color_codes | split: "," %}

  {% for color_code in color_array %}
  {% assign color_tag = color_code | split: ":" | first %}
  {% assign color = color_code | split: ":" | last %}

  .pg__option__value[data-color-tag="{{color_tag}}"]{
      width: 25px !important;
      height: 25px;
      border-radius: 15px;
  }

  .color-load[data-color-tag="{{color_tag}}"]{
      background-image: none !important;
      background-color: {{ color }} !important;
      border-radius: 15px;
      -webkit-box-shadow: inset 0px 0px 5px 0px rgba(0,0,0,0.3);
      -moz-box-shadow: inset 0px 0px 5px 0px rgba(0,0,0,0.3);
      box-shadow: inset 0px 0px 5px 0px rgba(0,0,0,0.3);
  }
	
   
  .pg__option__value[data-color-tag="{{color_tag}}"]::before{
  	border-radius: 15px;
  }
  {% endfor %}

{% endcomment %}

</style>