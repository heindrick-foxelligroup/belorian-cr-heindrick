<style>
@media only screen and (min-width: 990px){
  .product-template-section{
    max-width: 1000px; 
  }


  .product-template-section > div > div.col-xs-12.col-md-6.gutter-ele-top-tbs{
    width: 40%
  }

  .product-template-section  > div > div.col-xs-12.col-md-6.pos-sticky{
    width: 60%
  }
}

