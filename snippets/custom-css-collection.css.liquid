    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column;
  }

  .collection__products .grid__item .pg__bottom > .flex {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column;
    -webkit-box-align: start;
    -ms-flex-align: start;
    align-items: flex-start;
    margin-top: auto;
  }

